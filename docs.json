{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Basedash Documentation",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Get started",
            "pages": ["introduction", "quickstart", "development"]
          },
          {
            "group": "Essentials",
            "pages": [
              "essentials/security",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "Integrations",
        "groups": [
          {
            "group": "Databases",
            "pages": [
              "integrations/mysql",
              "integrations/postgres"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": []
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@basedash.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://charts.basedash.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/Basedash",
      "github": "https://github.com/Basedash",
      "linkedin": "https://linkedin.com/company/Basedash"
    }
  }
}
