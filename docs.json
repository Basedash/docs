{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Basedash Documentation",
  "colors": {
    "primary": "#3C50FF",
    "light": "#6373FF",
    "dark": "#061DE0"
  },
  "favicon": "/favicon.svg",
  "appearance": {
    "default": "system"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["introduction"]
          },
          {
            "group": "Essentials",
            "pages": ["essentials/security"]
          }
        ]
      },
      {
        "tab": "Data sources",
        "groups": [
          {
            "group": "Databases",
            "pages": [
              "data-sources/mysql",
              "data-sources/planetscale",
              "data-sources/postgres",
              "data-sources/spanner"
            ]
          },
          {
            "group": "Warehouses",
            "pages": [
              "data-sources/bigquery",
              "data-sources/clickhouse",
              "data-sources/snowflake"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": []
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@basedash.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://charts.basedash.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/Basedash",
      "github": "https://github.com/Basedash",
      "linkedin": "https://linkedin.com/company/Basedash"
    }
  },
  "fonts": {
    "body": {
      "family": "InterVariable",
      "source": "/public/fonts/inter/InterVariable.woff2",
      "format": "woff2",
      "weight": 400
    },
    "heading": {
      "family": "InterVariable",
      "source": "/public/fonts/inter/InterVariable.woff2",
      "format": "woff2",
      "weight": 600
    }
  },
  "styling": {
    "codeblocks": "dark"
  }
}
