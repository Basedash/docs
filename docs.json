{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Basedash Documentation",
  "colors": {
    "primary": "#3C50FF",
    "light": "#6373FF",
    "dark": "#061DE0"
  },
  "favicon": "/favicon.svg",
  "css": [
    "/styles/custom.css",
    "/styles/fixes/typography-fixes.css",
    "/styles/fixes/button-fixes.css",
    "/styles/fixes/background-fixes.css",
    "/styles/fixes/mintlify-overrides.css"
  ],
  "javascript": ["/js/theme-toggle.js"],
  "modeToggle": {
    "default": "dark"
  },
  "feedback": {
    "suggestEdit": true
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["introduction"]
          },
          {
            "group": "Essentials",
            "pages": ["essentials/security"]
          }
        ]
      },
      {
        "tab": "Data sources",
        "groups": [
          {
            "group": "Databases",
            "pages": [
              "data-sources/clickhouse",
              "data-sources/mysql",
              "data-sources/planetscale",
              "data-sources/postgres",
              "data-sources/spanner"
            ]
          },
          {
            "group": "Warehouses",
            "pages": ["data-sources/bigquery", "data-sources/snowflake"]
          }
        ]
      }
    ],
    "global": {
      "anchors": []
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@basedash.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://charts.basedash.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/Basedash",
      "github": "https://github.com/Basedash",
      "linkedin": "https://linkedin.com/company/Basedash"
    }
  },
  "typography": {
    "fontFamily": "InterVariable, -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'",
    "code": "'JetBrains Mono', SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace"
  }
}
